@page
@model Module4Challenge.Pages.IndexModel
@{
    ViewData["Title"] = "Dad Joke Generator";
}

 <!-- container to hold content -->
 <div class="container mt-5">
    <!-- heading to welcome users -->
    <h1 class="text-center">Welcome to the Dad Joke Generator!</h1>
    <!-- card to display initally generated jokes -->
    <div class="card mt-4">
        <div class="card-body">
            <!-- heading to introduce jokes -->
            <h5>Generated Jokes:</h5>
            <!-- create unordered list to display jokes in -->
            <ul class="list-group">
                <!-- loop through JokesToDisplay array and display each element -->
                @for (int i = 0; i < Model.JokesToDisplay.Count; i++) {
                    <li class="list-group-item">@Model.JokesToDisplay[i]</li>
                }
            </ul>
        </div>
    </div>
 </div>